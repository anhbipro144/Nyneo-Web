@model Diary
<section id="createDiary">
    <div class="container mx-auto p-5">


        <form asp-action="CreateDiary" class="text-titleText grid px-5   grid-cols-1 grid-rows-3 " method="post">

            @* Title *@
            <div class="md:mb-7 w-full">
                <label asp-for=@Model.title></label>
                <input asp-for=@Model.title
                    class="md:w-1/3 block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-full p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
                <span asp-validation-for=@Model.title class="text-red-700"></span>
            </div>

            <div class="md:mb-7 row-start-2">
                <label asp-for=@Model.content></label>
                <textarea asp-for=@Model.content
                    class="md:w-1/3 block p-2 rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-full  focus:outline-none focus:border-primary transition-colors duration-300"></textarea>
                <span asp-validation-for=@Model.content class="text-red-700"></span>

            </div>

            <button type="submit"
                class="md:w-1/3 mt-5 w-full    text-lg rounded-lg text-white font-bold bg-primary">Add</button>

        </form>
    </div>
</section>