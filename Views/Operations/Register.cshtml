@model Nyneo_Web.Models.RegisterUser
<form asp-action="Register" class="text-titleText grid  grid-cols-2 grid-rows-6 w-fit gap-x-32" method="post">

    @* Title *@
    <div class="mb-7">
        <label class="mb-9" asp-for=@Model.FirstName></label>
        <input asp-for=@Model.FirstName
            class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
        <span asp-validation-for=@Model.FirstName class="text-red-700"></span>
    </div>

    <div class="mb-7 ">
        <label class="mb-9" asp-for=@Model.LastName></label>
        <input asp-for=@Model.LastName
            class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
        <span asp-validation-for=@Model.LastName class="text-red-700"></span>

    </div>


    <div class="mb-7 ">
        <label class="mb-9" asp-for=@Model.Username></label>
        <input asp-for=@Model.Username
            class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
        <span asp-validation-for=@Model.Username class="text-red-700"></span>

    </div>

    <div class="mb-7 ">
        <label class="mb-9" asp-for=@Model.Email></label>
        <input asp-for=@Model.Email
            class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
        <span asp-validation-for=@Model.Email class="text-red-700"></span>

    </div>

    <div class="mb-7 ">
        <label class="mb-9" asp-for=@Model.Password></label>
        <input asp-for=@Model.Password
            class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
        <span asp-validation-for=@Model.Password class="text-red-700"></span>

    </div>
    <div class="mb-7 ">
        <label class="mb-9" asp-for=@Model.Gender></label>
        <select asp-for=@Model.Gender
            class="block rounded-md bg-gray-50 border-2 border-gray-300 text-gray-900 text-sm w-72 p-2.5 focus:outline-none focus:border-primary transition-colors duration-300" />
        <option value="male">Nam</option>
        <option value="female">Ná»¯</option>
        </select>
        <span asp-validation-for=@Model.Gender class="text-red-700"></span>

    </div>

    <button type="submit" class=" w-full py-2 col-span-2 text-lg  font-bold bg-primary">Add</button>

</form>